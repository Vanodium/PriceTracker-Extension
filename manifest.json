{
    "manifest_version": 2,
    "name": "PriceTracker",
    "version": "0.1",
    "description": "Automatic price checking",
    "permissions": ["storage", "fileSystem", "tabs", "activeTab"],
    "host_permissions": [
      "127.0.0.1:8989/*",
      "https://*/*",
      "http://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "browser_action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
      }
    ]
}